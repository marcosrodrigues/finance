<h1>Contas a Receber</h1>

<table cellspacing="0">
  <thead>
    <tr>
      <th>Conta</th>
      <th>Favorecido</th>
      <th>Valor</th>
      <th>Vencimento</th>
      <th colspan="3"></th>
    </tr>
  <thead>
  <tbody>
<% @receivables.each do |receivable| %>
  <tr>
    <td><%= receivable.account.name %></td>
    <td><%= receivable.favored.name %></td>
    <td><%= number_to_currency(receivable.value) %></td>
    <td><%= receivable.maturity.strftime("%d/%m/%Y") %></td>
    <td><%= link_to 'Detalhes', receivable %></td>
    <td><%= link_to 'Editar', edit_receivable_path(receivable) %></td>
    <td><%= link_to 'Excluir', receivable, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'Novo', new_receivable_path %>
